generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Athlete {
  id         String       @id @default(uuid())
  userId     String       @unique
  gender     String
  sport      String
  meta       Meta?
  activities Activities[]
}

model Meta {
  id        Int     @id @default(autoincrement())
  heartrate Int
  watt      Int
  speed     Int
  athlete   Athlete @relation(fields: [userId], references: [id])
  userId    String  @unique
}

model Activities {
  id        Int         @id @default(autoincrement())
  athlete   Athlete     @relation(fields: [userId], references: [userId])
  userId    String
  date      DateTime
  goalId    String
  tags      Tag[]       @relation()
  questions Questions[]
  intervals Intervals[]
}

model Tag {
  id         Int          @id @default(autoincrement())
  name       String       @unique
  activities Activities[]
}

model Questions {
  id         String       @id @default(uuid())
  question   String
  type       String
  activities Activities[]
}

model Intervals {
  id         String       @id @default(uuid())
  duration   Int
  intensity  Int
  activities Activities[]
}
