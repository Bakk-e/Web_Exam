generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Athlete {
  id            String         @id @default(uuid())
  userId        String         @unique
  gender        String
  sport         String
  meta          Meta?
  activities    Activity?
  goalId        Goal[]
  competitionId Competition[]
  archivedMeta  ArchivedMeta[]
}

model Meta {
  id        Int     @id @default(autoincrement())
  heartrate Int
  watt      Int
  speed     Int
  athlete   Athlete @relation(fields: [userId], references: [userId])
  userId    String  @unique
}

model Activity {
  id        Int        @id @default(autoincrement())
  slug      String     @unique
  athlete   Athlete    @relation(fields: [userId], references: [userId])
  userId    String     @unique
  date      DateTime
  tags      Tag[]      @relation()
  questions Question[]
  intervals Interval[]
}

model Tag {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  activities Activity[]
}

model Question {
  id         String     @id @default(uuid())
  question   String
  type       String
  activities Activity[]
}

model Interval {
  id         String     @id @default(uuid())
  duration   Int
  intensity  Int
  activities Activity[]
}

model Goal {
  id        String   @id @default(uuid())
  goalName  String
  date      DateTime
  place     String
  goal      Int
  comment   String
  Athlete   Athlete? @relation(fields: [athleteId], references: [id])
  athleteId String?
}

model Competition {
  id              String   @id @default(uuid())
  competitionName String
  date            DateTime
  goal            String
  comment         String
  Athlete         Athlete? @relation(fields: [athleteId], references: [id])
  athleteId       String?
}

model ArchivedMeta {
  id           Int      @id @default(autoincrement())
  athleteId    String   @unique
  heartrate    Int
  watt         Int
  speed        Int
  archivedDate DateTime @default(now())

  Athlete Athlete @relation(fields: [athleteId], references: [id])
}
